package DatabaseTesting;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;
import org.testng.Assert;
import org.testng.annotations.Test;

public class user_accountTableDeleteDataTest {
    
	 @Test
	    public void testDeleteOperation() {
	        String host = "localhost";
	        String port = "3306";
	        String userNameToDelete = "Ahmad"; // The username of the record to be deleted
	        try (Connection con = DriverManager.getConnection("jdbc:mysql://" + host + ":" + port + "/cooking_project", "root", "Maisa82**");
	             Statement s = con.createStatement()) {

	            // Execute the UPDATE statement
	            int rowsAffected = s.executeUpdate("DELETE user_account WHERE userName = '" + userNameToDelete + "'");

	            // Check if update was successful
	            Assert.assertEquals(rowsAffected, 1, "Failed to Delete user account with username: " + userNameToDelete);
	        } catch (SQLException e) {
	            e.printStackTrace();
	            Assert.fail("Exception occurred while deleting user account: " + e.getMessage());
	        }
	    }
}
